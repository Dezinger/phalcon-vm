<script id="tmpl-new-site" type="text/html">
	<div class="dialog-container">
		<form name="siteForm">
			<md-input-container class="md-block">
				<label>Site Name</label>
				<input type="text" name="name" ng-model="site.name" md-autofocus md-no-asterisk required>
				<div ng-messages="siteForm.name.$error">
					<div ng-message="required">This field is required.</div>
				</div>
			</md-input-container>

			<md-input-container class="md-block">
				<label>Directory</label>
				<input type="text" name="direcotry" ng-model="site.directory" md-no-asterisk required>
				<div ng-messages="siteForm.direcotry.$error">
					<div ng-message="required">This field is required.</div>
				</div>
			</md-input-container>

			<md-input-container class="md-block">
				<label>Domains (space-separated)</label>
				<input type="text" name="domains" ng-model="site.domains" md-no-asterisk required>
				<div ng-messages="siteForm.domains.$error">
					<div ng-message="required">This field is required.</div>
				</div>
			</md-input-container>

			<md-input-container class="md-block">
				<label>Repository</label>
				<input ng-model="site.repository">
			</md-input-container>

			<md-input-container class="md-block">
				<label>Repository Provider</label>
				<md-select ng-model="site.provider">
					<md-option ng-repeat="pvd in site.providers" ng-value="pvd.key">
						{{pvd.label}}
					</md-option>
				</md-select>
			</md-input-container>

			<div layout="row">
				<md-button class="md-warn" ng-click="site.cancel()">Cancel</md-button>
				<span flex></span>
				<md-button class="md-primary" ng-click="site.create()">Create</md-button>
			</div>
		</form>
	</div>
</script>
